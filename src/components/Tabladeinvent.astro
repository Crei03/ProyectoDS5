---
import type { Laptop } from '../types'; // Importamos el tipo de datos para laptops

// Datos de laptops quemados (fijos)
let laptops: Laptop[] = [
  {
    id: 1,
    name: "Lenovo Yoga 7i",
    details: "Intel Core i7-1135G7 | 16GB RAM | 256GB SSD",
    category: "Gama Media",
    price: "$750",
    stock: 10,
    imageUrl: "https://example.com/lenovo-yoga.jpg"
  },
  {
    id: 2,
    name: "HP Stream 14",
    details: "Intel Celeron N4020 | 4GB RAM | 64GB eMMC",
    category: "Gama Baja",
    price: "$280",
    stock: 3,
    imageUrl: "https://example.com/hp-stream.jpg"
  },
  {
    id: 3,
    name: "Huawei MateBook X Pro",
    details: "Intel Core i7-1165G7 | 16GB RAM | 512GB SSD",
    category: "Gama Alta",
    price: "$1,500",
    stock: 5,
    imageUrl: "https://example.com/huawei-matebook.jpg"
  },
  {
    id: 4,
    name: "Lenovo ThinkPad L14 Yoga",
    details: "Intel Core i5-1135G7 | 8GB RAM | 256GB SSD",
    category: "Empresarial",
    price: "$1,000",
    stock: 0,
    imageUrl: "https://example.com/lenovo-thinkpad.jpg"
  }
];

console.log(laptops); // Verifica si los datos se están cargando correctamente.
---

<main>
  <table class="inventory-table">
    <thead>
      <tr>
        <th>Imagen</th>
        <th>Nombre</th>
        <th>Categoría</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {laptops.map((laptop) => (
        <tr>
          <td><img src={laptop.imageUrl} alt={laptop.name} class="laptop-image" /></td>
          <td>
            <strong>{laptop.name}</strong><br />
            <small>{laptop.details}</small>
          </td>
          <td>{laptop.category}</td>
          <td class="price">{laptop.price}</td>
          <td class={laptop.stock > 0 ? "stock in-stock" : "stock out-of-stock"}>
            {laptop.stock} {laptop.stock > 0 ? "En Stock" : "Sin Stock"}
          </td>
          <td class="actions">
            <button class="edit-button">&#9998;</button>
            <button class="delete-button">&#128465;</button>
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</main>

<style>
  .inventory-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .inventory-table th, .inventory-table td {
    padding: 15px;
    text-align: center;
    border-bottom: 1px solid #ccc;
  }

  .inventory-table th {
    background-color: #f5f5f5;
  }

  .laptop-image {
    width: 100px;
    height: auto;
    object-fit: cover;
  }

  .price {
    color: #007bff;
    font-weight: bold;
  }

  .stock.in-stock {
    color: green;
  }

  .stock.out-of-stock {
    color: red;
  }

  .actions button {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 18px;
    margin: 0 5px;
  }

  .actions .edit-button {
    color: #ffc107;
  }

  .actions .delete-button {
    color: #dc3545;
  }
</style>
